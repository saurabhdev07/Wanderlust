<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
    <div class="col-8 offset-2">
      <br/>
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings"  novalidate class="needs-validation" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="title" class="from-label">Title</label>
      <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required />
      <div class="valid-feedback">Title looks good!</div>
      </div>
      

      <div class="mb-3">
        <label for="description" class="from-label">Description</label>
        <textarea
        name="listing[description]"
        class="form-control"
        required
      ></textarea>
      </div>
      
      <!-- <div class="mb-3">
        <label for="image" class="from-label">Image</label>
        <input
        name="listing[image]"
        placeholder="enter image URL/Link"
        type="text"
        class="form-control"
      />
      </div> -->

      <div class="mb-3">
        <label for="image" class="from-label">Upload Image</label>
        <input
        name="listing[image]"
        type="file"
        class="form-control"
        required
      />
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
         <label for="price" class="from-label">Price</label>
         <input name="listing[price]" placeholder="enter price" type="number"  class="form-control" required/>
         <div class="invalid-feedback">Please Enter a valid Price!</div>
      </div>
      
      <div class="mb-3 col-md-8">
        <label for="country" class="from-label">Country</label>
         <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required/>
         <div class="invalid-feedback">Please Enter Correct Country Name</div>
      </div>
      </div>
      
      
     
      <div class="mb-3">
        <label for="location" class="from-label">Location</label>
        <input
        name="listing[location]"
        placeholder="enter location"
        type="text"
        class="form-control"
        required
      />
      <div class="invalid-feedback">Please Enter the Right Location</div>
      </div>
      <br />
      <button class="btn btn-dark add-btn mt-3">Add</button>
      <br/>
      <br/>
    </form>
    </div>
    </div>

   
